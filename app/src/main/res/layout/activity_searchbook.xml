<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadscreenbackground"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="LibraryLighthouse"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/layoutsearch"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                    <SearchView

                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_background_round_normal"
                        android:backgroundTint="#A28D4F"



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="-340dp"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_ouline"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnbook"
                            android:layout_width="141dp"
                            android:layout_height="110dp"
                            android:background="a"
                            android:text="Search"
                            android:textSize="14sp"
                            app:icon="@drawable/searchicon"
                            app:iconGravity="textTop"

                            app:iconSize="50dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnmember"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:backgroundTint="#00262C34"
                            android:text="Return"
                            android:textSize="14sp"
                            app:icon="@drawable/returnbookicon"
                            app:iconGravity="textTop"
                            app:iconSize="50dp" />
                    </FrameLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnlendbook"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:backgroundTint="#00262C34"
                            android:text="Borrow"
                            android:textSize="14sp"
                            app:icon="@drawable/borrowbookicon"
                            app:iconGravity="textTop"

                            app:iconSize="55dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnreturn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00262C34"
                            android:text="Account"
                            android:textSize="14sp"
                            app:icon="@drawable/username"
                            app:iconGravity="textTop"

                            app:iconSize="55dp" />
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navbar"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background_round_normal"
        android:backgroundTint="#262C34"
        android:elevation="8dp"
        android:layout_marginTop="-300dp"
        android:translationZ="-8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnhome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:icon="@drawable/homeicon"
                    app:iconGravity="textTop"
                    app:iconPadding="3dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/green" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnsearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:text="Search"
                    android:textSize="10sp"
                    app:icon="@drawable/searchicon"
                    app:iconGravity="textTop"
                    app:iconPadding="3dp"
                    app:iconSize="30dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnnotification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:text="Borrow"
                    android:textSize="10sp"
                    app:icon="@drawable/borrowbookicon"
                    app:iconGravity="textTop"
                    app:iconPadding="3dp"
                    app:iconSize="30dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnstore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:text="Return"
                    android:textSize="10sp"
                    app:icon="@drawable/returnbookicon"
                    app:iconGravity="textTop"
                    app:iconPadding="3dp"
                    app:iconSize="30dp" />
            </FrameLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
