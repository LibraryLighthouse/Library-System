<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the code from the SMS we sent to"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+8801774280874"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:32"
            android:textSize="18sp"
            android:textColor="#FF6600"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Repeat this EditText 6 times for OTP input -->
            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />
            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />
            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />
            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />
            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />
            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/otp_input_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/resend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t receive the OTP? RESEND"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAllCaps="false"
            android:backgroundTint="#FF5722"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
