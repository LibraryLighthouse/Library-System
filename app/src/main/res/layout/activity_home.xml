<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadscreenbackground">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logo" />
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/librarylighthouse"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/layoutsearch"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                    <SearchView
                        android:id="@+id/searchView"
                        android:layout_width="375dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_background_round_normal"
                        android:backgroundTint="#A28D4F" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="-240dp"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnbook"
                            android:layout_width="141dp"
                            android:layout_height="110dp"
                            android:background="@drawable/loadscreenbackground"
                            android:text="Search"
                            android:textSize="14sp"
                            app:icon="@drawable/searchicon"
                            app:iconGravity="textTop"
                            app:iconSize="30dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnmember"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:backgroundTint="#00262C34"
                            android:text="Return"
                            android:textSize="14sp"
                            app:icon="@drawable/returnbookicon"
                            app:iconGravity="textTop"
                            app:iconSize="30dp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnlendbook"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:backgroundTint="#00262C34"
                            android:text="Borrow"
                            android:textSize="14sp"
                            app:icon="@drawable/borrowbookicon"
                            app:iconGravity="textTop"
                            app:iconSize="30dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnreturn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00262C34"
                            android:text="Account"
                            android:textSize="14sp"
                            app:icon="@drawable/username"
                            app:iconGravity="textTop"
                            app:iconSize="30dp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="20dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">
                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="-5dp"
                            android:text="Popular Books"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="normal" />

                    </FrameLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <ImageView
                            android:src="@drawable/graphql"
                            android:id="@+id/btnreturnbook_popular2"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:backgroundTint="#00262C34"
                            android:text="Borrow"
                            android:textSize="14sp"

                            app:iconGravity="textTop"
                            app:iconSize="95dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <ImageView
                            android:id="@+id/btnreturn_popular4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00262C34"
                            android:text="Account"
                            android:src="@drawable/graphql"
                            android:textSize="14sp"

                            app:iconGravity="textTop"
                            app:iconSize="95dp" />
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
